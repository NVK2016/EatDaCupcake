<div class="container">
    <div class="jumbotron">
        <h1 id="color-override">De-li-cious-Cupcake!</h1>
        <p id="color-override">Asemble the cupcakes, devour them to get a sugar rush.</p>
        <br>
        <h2 id="color-override">Make a Cupcake</h2>
        {{!-- <panel> --}}
        <form class="create-form">
            <div class="form-group">
                <label for="newcupcake" id="color-override">Assemble a Cupcake:</label>
                <input type="text" id="newcupcake" name="cupcake_name">
                {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
                <button type="submit" class="btn btn-success" id="addcupcake"><span
                        class="fa fa-thumbs-up"></span>ADD a CUPCAKE</button>
            </div>
        </form>
        {{!-- </panel> --}}
    </div><!-- /jumbotron -->

    <div class="row">
        {{!-- Cupcake not eaten --}}
        <div class="col-lg-6">
            <div class="card">
                <h2>Gobble Gooble till you wobble</h2>
                <hr>
                <ul class="list-group">
                    {{#each cupcakes}}
                        {{#unless devoured}}
                            {{> cupcakes/cupcake-block devoured=true}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        {{!-- Cupcake eaten --}}
        <div class="col-lg-6">
            <div class="card">
                <h2>Yummy !!! De-li-cious Goodness</h2>
                <hr>
                <ul class="list-group">
                    {{#each cupcakes}}
                        {{#if devoured}}
                            {{> cupcakes/cupcake-block devour=false}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

</div>